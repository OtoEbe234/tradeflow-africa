# =============================================================================
# TradeFlow Africa â€” Environment Variables
# Copy this file to .env and fill in actual values
# =============================================================================

# App
APP_NAME=TradeFlow Africa
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-to-a-random-secret

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@db.xxxx.supabase.co:5432/postgres
DATABASE_POOL_SIZE=20

# Redis (Upstash)
REDIS_URL=redis://default:password@xxxx.upstash.io:6379
REDIS_SSL=true

# JWT Authentication (RS256)
JWT_PRIVATE_KEY_PATH=keys/private.pem
JWT_PUBLIC_KEY_PATH=keys/public.pem
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP
OTP_LENGTH=6
OTP_EXPIRE_SECONDS=300

# WhatsApp (Meta Cloud API)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# KYC Verification
BVN_API_URL=https://api.verifyme.ng/v1
BVN_API_KEY=your-verifyme-api-key
NIN_API_URL=https://api.verifyme.ng/v1
NIN_API_KEY=your-verifyme-api-key

# Providus Bank
PROVIDUS_BASE_URL=https://vps.providusbank.com/api/v1
PROVIDUS_CLIENT_ID=your-client-id
PROVIDUS_CLIENT_SECRET=your-client-secret
PROVIDUS_ACCOUNT_NUMBER=your-settlement-account

# Afrexim CIPS Settlement
CIPS_API_URL=https://api.cips.afreximbank.com/v1
CIPS_API_KEY=your-cips-api-key
CIPS_MERCHANT_ID=your-merchant-id

# FX Rates
FX_RATE_PROVIDER=exchangerate-api
FX_RATE_API_KEY=your-exchangerate-api-key
FX_RATE_CACHE_TTL_SECONDS=300

# Matching Engine
MATCHING_CYCLE_INTERVAL_SECONDS=300
MATCHING_TOLERANCE_PERCENT=5.0
MATCHING_POOL_TIMEOUT_HOURS=24

# SMS (Termii)
SMS_API_URL=https://api.ng.termii.com/api
SMS_API_KEY=your-termii-api-key
SMS_SENDER_ID=TradeFlow

# Celery
CELERY_BROKER_URL=redis://default:password@xxxx.upstash.io:6379/1
CELERY_RESULT_BACKEND=redis://default:password@xxxx.upstash.io:6379/2

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Sentry (optional)
SENTRY_DSN=
